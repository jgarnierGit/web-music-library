{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Debug (Docker)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 5678,
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/services/backend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Remote Debug Celery (Docker)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "0.0.0.0",
                "port": 6900,
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/services/backend",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": true
        },
    ]
}